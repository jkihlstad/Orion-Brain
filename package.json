    "eslint": "^8.56.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "wrangler": "^3.91.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@langchain/core": "^1.1.15",
    "@langchain/langgraph": "^1.1.0",
    "@langchain/openai": "^1.2.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
