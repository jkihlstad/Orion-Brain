{
  "name": "brain-platform",
  "version": "1.0.0",
  "description": "Brain Platform Cloudflare Worker - Event processing and knowledge graph materialization",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "tsc --noEmit && echo 'Build successful'",
