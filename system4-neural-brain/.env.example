# Neural Intelligence Platform - Environment Variables

# =============================================================================
# CONVEX
# =============================================================================
CONVEX_URL=https://your-deployment.convex.cloud
CONVEX_DEPLOY_KEY=your-convex-deploy-key

# =============================================================================
# OPENROUTER
# =============================================================================
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# =============================================================================
# LANCEDB
# =============================================================================
LANCEDB_PATH=./data/lancedb

# =============================================================================
# NEO4J
# =============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password

# =============================================================================
# CLERK
# =============================================================================
CLERK_SECRET_KEY=sk_test_your-clerk-secret
CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable

# =============================================================================
# INTERNAL AUTH
# =============================================================================
INTERNAL_API_KEY=your-internal-api-key-for-server-to-server

# =============================================================================
# WORKER CONFIG
# =============================================================================
WORKER_BATCH_SIZE=10
WORKER_POLL_INTERVAL=5000
WORKER_LEASE_TIMEOUT=300000
WORKER_MAX_RETRIES=3

# =============================================================================
# THRESHOLDS
# =============================================================================
SPEAKER_CLUSTER_SIMILARITY=0.85
UNKNOWN_SPEAKER_PROMPT_COUNT=5
MAX_FRAMES_PER_VIDEO=30
FRAME_INTERVAL_SECONDS=2

# =============================================================================
# SERVER
# =============================================================================
PORT=3000
NODE_ENV=development
LOG_LEVEL=info
SERVICE_NAME=neural-brain
